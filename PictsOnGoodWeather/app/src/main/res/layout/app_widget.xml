<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/city_text_view"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="City"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country_text_view"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/city_text_view"
            android:textSize="16sp"
            android:text="Country"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temperature_text_view"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"
            android:text="20"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_icon_image_view"
            android:layout_centerVertical="true"
            android:layout_above="@+id/temperature_text_view"
            android:layout_toRightOf="@+id/temperature_text_view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_photo_camera_black_48dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weather_condition_text_view"
            android:layout_below="@+id/temperature_text_view"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="description"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pressure_container"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pressure_label"
                android:text="Pressure:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pressure_text_view"
                android:layout_below="@+id/pressure_label"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="Pressure"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/humidity_container"
            android:layout_above="@+id/pressure_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humidity_label"
                android:text="Humidity:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/humidity_text_view"
                android:layout_below="@+id/humidity_label"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="Humidity"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wind_container"
            android:layout_below="@+id/pressure_container">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_label"
                android:text="Wind:"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wind_text_view"
                android:layout_below="@+id/wind_label"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:text="Wind"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>